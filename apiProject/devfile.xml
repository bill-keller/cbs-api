schemaVersion: 2.1.0
metadata:
  name: cbsa-api-zosconnect
attributes:
  controller.devfile.io/storage-type: ephemeral
projects:
  - git:
      checkoutFrom:
        revision: main
      remotes:
        origin: 'https://github.com/bill-keller/cbsa-api.git'
    name: cbsa-api-zosconnect
components:
    - name: zosconnect
      container:
        endpoints:
          - exposure: public
            name: zosconnect-ui
            path: /zosConnect/designer/
            protocol: http
            targetPort: 9080
        env:
          - name: ZCON_DESIGNER_PROJECT
            value: /projects/cbsa-api-zosconnect/apiProject
        image: 'icr.io/zosconnect/ibm-zcon-designer:3.0.76'
        memoryLimit: 4927M
        mountSources: true
